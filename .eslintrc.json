{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},

	"ecmaFeatures": {
		"jsx": true
	},

	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		],
		"no-console": [
			"off"
		],
		"no-unused-vars": [
			"off"
		]
	},
	"globals": {
		"process": true,
		"__dirname": true,
		"React": true
	}
}
